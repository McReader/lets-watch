<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/upcoming_poster_image_view"
        style="@style/styleViewPosterOnMainScreen"
        android:layout_width="88dip"
        android:layout_height="128dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" >

            <TextView
                android:id="@+id/upcoming_mpaa_text_view"
                style="@style/styleMppaOnMainScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PG-17" />

            <TextView
                android:id="@+id/upcoming_release_date_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Text text" />
        </LinearLayout>

        <TextView
            android:id="@+id/upcoming_title_text_view"
            style="@style/styleFilmTitleOnMainScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text text" />

        <TextView
            android:id="@+id/upcoming_synopsis_text_view"
            style="@style/styleTextDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text text" />

        <TextView
            android:id="@+id/upcoming_cast_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:maxLines="2"
            android:textStyle="bold"
            android:text="cast" />
    </LinearLayout>

</LinearLayout>